<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LinkedZone" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/samawy</item>
        <item name="colorPrimaryVariant">@color/samawy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark" tools:targetApi="23">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

    </style>


    <style name="start_Theme" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark" tools:targetApi="23">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>


    <!-- Tap layout font family  and text size -->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/myfont</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>


</resources>