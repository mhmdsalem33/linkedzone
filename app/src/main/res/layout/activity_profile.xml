            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_220sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/book"
                android:scaleType="centerCrop"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:src="@drawable/one"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/img_profile"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="@+id/img_cover"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/_20sdp"
                />
            <LinearLayout
                android:id="@+id/add_img_cover"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/profile_border"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/img_cover"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                >
                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/camera"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/add_img_profile"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/profile_border"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/img_profile"
                app:layout_constraintEnd_toEndOf="@+id/img_profile"

                >
                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/camera"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/myfont"
                android:text="Mohamed Salem"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_cover"
                android:layout_marginStart="@dimen/_10sdp"
                />
            <ImageView
                android:id="@+id/img_messeges"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:src="@drawable/messenger"
                app:layout_constraintTop_toTopOf="@+id/user_name"
                app:layout_constraintStart_toEndOf="@+id/user_name"
                app:layout_constraintBottom_toBottomOf="@+id/user_name"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_5sdp"

                />
            <TextView
                android:id="@+id/user_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myfont"
                android:text="Android developer"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/user_name"
                app:layout_constraintTop_toBottomOf="@+id/user_name" />




            <LinearLayout
                android:id="@+id/linear_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/img_cover"
                app:layout_constraintBottom_toTopOf="@+id/view"
                >
                <ImageView
                    android:id="@+id/user_follow"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/adduser"
                    app:tint="@color/zahry"
                    />
                <ImageView
                    android:id="@+id/user_unfollow"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/blockuser"
                    app:tint="@color/zahry"
                    android:visibility="gone"
                    />


            </LinearLayout>
            <ImageView
                android:id="@+id/img_setting"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/settings"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/img_cover"
                app:layout_constraintBottom_toTopOf="@+id/view"
                />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="#4584B6FB"
                app:layout_constraintTop_toBottomOf="@+id/user_about"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                />



            <LinearLayout
                android:id="@+id/linear_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_7sdp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/myProfilePost"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/one"
                    />
                <TextView
                    android:id="@+id/onMind"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:hint="What's on your mind?"
                    android:fontFamily="@font/myfont"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linear_post"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                android:text="15.00 followers"
                android:fontFamily="@font/myfont"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/friends_rec_View"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/tv_followers"
                />

            <TextView
                android:id="@+id/tv_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="posts"
                app:layout_constraintTop_toBottomOf="@+id/friends_rec_View"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:fontFamily="@font/myfont"
                android:layout_marginTop="@dimen/_5sdp"

                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/postsRecView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@id/right_guideline"
                app:layout_constraintStart_toStartOf="@id/left_guide"
                app:layout_constraintTop_toBottomOf="@+id/tv_posts"
                android:visibility="visible"
                />




            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="21dp" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>